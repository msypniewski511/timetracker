.col
.col-md-8.m-auto
  .card
    .card-header
      %h2 Utwórz konto
    .card-body
      = devise_error_messages!
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        // = render "devise/shared/error_messages", resource: resource
        
        .input-group.mb-3
          = f.text_field :first_name, class: "form-control input-lg", placeholder: "Imie"
          .input-group-append
            %span.input-group-text
              %i.fas.fa-user
        .input-group.mb-3
          = f.text_field :last_name, class: "form-control input-lg", placeholder: "Nazwisko"
          .input-group-append
            %span.input-group-text
              %i.fas.fa-user
        .input-group.mb-3
          = f.email_field :email, class: "form-control input-lg", placeholder: "Email"
          .input-group-append
            %span.input-group-text
              %i.fas.fa-envelope
        .input-group
          = f.password_field :password, class: "form-control input-lg", placeholder: "Hasło"
          .input-group-append
            %span.input-group-text
              %i.fas.fa-key
        - if @minimum_password_length
          %small.form-text.text-muted.mb-3
            (#{@minimum_password_length} characters minimum)
        
        .input-group.mb-3
          = f.password_field :password_confirmation, class: "form-control input-lg", placeholder: "Potwierdz Hasło"
          .input-group-append
            %span.input-group-text
              %i.fas.fa-key

        .actions.mb-3
          = f.submit "Utwórz konto", class: "btn btn-primary btn-block"
      = render "devise/shared/links"
.col