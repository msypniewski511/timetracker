!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Timetracker
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_pack_tag 'application', media: 'all'
    = javascript_pack_tag 'application'
  %body
    %header.container.mb-3
      %nav.navbar.navbar-light.bg-light
        = link_to "Time Tracker", root_path, class: "navbar-brand"
        .pull-right.right-buttons
          - if user_signed_in?
            = link_to "Wyloguj siÄ™", destroy_user_session_path, method: 'delete', class: "btn btn-light navbar-btn"
    .container
      
      = flash_messages layout_flash: false
      .row
        = yield
